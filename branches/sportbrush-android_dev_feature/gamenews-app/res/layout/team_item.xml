<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gamenews="http://schemas.android.com/apk/res/com.yy.android.sportbrush"
    android:id="@+id/team_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector_selector"
    android:baselineAligned="false"
    android:orientation="horizontal" 
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingStart="5dp"
    android:paddingRight="0dp"
    android:paddingEnd="0dp">

    <RelativeLayout
        android:id="@+id/rl_first_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dp"
        android:background="@drawable/team_item_selector"
        android:padding="1dip" >

        <com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            gamenews:adjustType="auto_adjust_scale_height"
            gamenews:scaleRate="1.00" >

            <com.yy.android.gamenews.ui.view.AutoAdjustImageView
                android:id="@+id/iv_first_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/article_list_item_loading"
                android:contentDescription="@drawable/article_list_item_loading"
                android:scaleType="centerCrop"
                android:src="@drawable/article_list_item_loading"
                gamenews:adjustType="auto_adjust_scale_height"
                gamenews:scaleRate="1.42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_firs_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal|bottom"
                android:text="TextView"
                android:textColor="#3c3c3c"
                android:textSize="12dp" />
        </com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout>

        <ImageView
            android:id="@+id/iv_first_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/team_selected"
            android:contentDescription="@null" />
    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/rl_second_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dp"
        android:background="@drawable/team_item_selector"
        android:padding="1dip" >

        <com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            gamenews:adjustType="auto_adjust_scale_height"
            gamenews:scaleRate="1.00" >

            <com.yy.android.gamenews.ui.view.AutoAdjustImageView
                android:id="@+id/iv_second_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/article_list_item_loading"
                android:contentDescription="@drawable/article_list_item_loading"
                android:scaleType="centerCrop"
                android:src="@drawable/article_list_item_loading"
                gamenews:adjustType="auto_adjust_scale_height"
                gamenews:scaleRate="1.42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_second_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal|bottom"
                android:text="TextView"
                android:textColor="#3c3c3c"
                android:textSize="12dp"/>
        </com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout>

        <ImageView
            android:id="@+id/iv_second_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/team_selected"
            android:contentDescription="@null" />
    </RelativeLayout>
    
      <RelativeLayout
        android:id="@+id/rl_third_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginBottom="10dip"
         android:layout_marginRight="5dip"
        android:layout_marginEnd="5dp"
               android:background="@drawable/team_item_selector"
        android:padding="1dip" >

        <com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            gamenews:adjustType="auto_adjust_scale_height"
            gamenews:scaleRate="1.00" >

            <com.yy.android.gamenews.ui.view.AutoAdjustImageView
                android:id="@+id/iv_third_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/article_list_item_loading"
                android:contentDescription="@drawable/article_list_item_loading"
                android:scaleType="centerCrop"
                android:src="@drawable/article_list_item_loading"
                gamenews:adjustType="auto_adjust_scale_height"
                gamenews:scaleRate="1.42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_third_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal|bottom"
                android:text="TextView"
                android:textColor="#3c3c3c"
                android:textSize="12dp" />
        </com.yy.android.gamenews.ui.view.AutoAdjustLinearLayout>

        <ImageView
            android:id="@+id/iv_third_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/team_selected"
            android:contentDescription="@null" />
    </RelativeLayout>

</LinearLayout>