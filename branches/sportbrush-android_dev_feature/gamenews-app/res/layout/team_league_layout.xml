<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector_selector"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="15dp" >

    <LinearLayout
        android:id="@+id/ll_sport_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@color/global_divider_color" />

        <TextView
            android:id="@+id/tv_sport_type"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@color/global_divider_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_league"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_league_name"
            style="@style/leagueLable"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="start|center_vertical"
            android:drawableLeft="@drawable/section"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/section"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_all_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_all_team"
                style="@style/leagueLable"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/all"
                android:includeFontPadding="false"
                android:textColor="@color/all_league_selector"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>