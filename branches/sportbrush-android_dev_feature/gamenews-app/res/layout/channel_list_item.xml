<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brand_detail_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_selector"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dip"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/brand_detail_img"
            android:layout_width="92dip"
            android:layout_height="65dip"
            android:background="@drawable/article_list_item_loading"
            android:contentDescription="@drawable/article_list_item_loading"
            android:src="@drawable/article_list_item_loading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="71dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="-4dp"
            android:layout_toLeftOf="@+id/channel_list_arrow"
            android:layout_toRightOf="@id/brand_detail_img"
            android:weightSum="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/brand_detail_name"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/global_lv_primary_text"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/channel_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TextView"
                android:layout_weight="1"
                android:textColor="@color/global_text_info_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="1"
                android:textColor="@color/global_lv_secondary_text"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@id/channel_list_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/channel_list_arrow" />
    </RelativeLayout>

</LinearLayout>