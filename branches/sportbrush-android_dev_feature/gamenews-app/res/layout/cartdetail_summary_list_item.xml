<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_selector" >

    <TextView
        android:id="@+id/cartdetail_sum_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/cartdetail_sum_item_price"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dip"
        android:minHeight="44dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dip"
        android:text="2014款 xDrive30"
        android:textColor="@color/cartdetail_summary_list_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        style="@style/global_divider_2"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@id/cartdetail_sum_item_price"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="87.7万"
        android:textColor="@color/cartdetail_param_head_text"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>