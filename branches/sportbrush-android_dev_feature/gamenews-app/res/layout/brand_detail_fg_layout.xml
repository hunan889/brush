<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brand_detail_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/article_list_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/brand_detail_img"
            android:layout_width="92dip"
            android:layout_height="69dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:contentDescription="@drawable/article_list_item_loading"
            android:background="@drawable/article_list_item_loading"
            android:src="@drawable/article_list_item_loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/brand_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="0dip"
                android:gravity="center_vertical|left"
                android:text="TextView"
                android:textColor="#3c3c3c"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dip"
                android:layout_marginTop="15dip"
                android:gravity="center_vertical|left"
                android:text="TextView"
                android:textColor="#ff622b"
                android:textSize="14dip"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/global_divider_2" />

</LinearLayout>